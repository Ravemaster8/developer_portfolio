<%= form_for @contact, url: form_index_path, remote: true do |f| %>
    <div>
        <%= f.label :name %></br>
        <%= f.text_field  :name, required: true, class: "contact-form-text-area" %></br>

        <%= f.label :email %></br>
        <%= f.text_field :email, required: true, class: "contact-form-text-area" %></br>

        <%= f.label :message %></br>
        <%= f.text_area :message, required: true, class: "contact-form-text-area", placeholder: "Send me a message"%></br>

        <div class= "hidden">
          <%= f.label :nickname %>
          <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
        </div>

      <%= f.submit 'Send Message' %>
    </div>
  <% end %>

  <div>
    <%= render 'shared/flash' %>
  </div>
  